{
  "extends": [
    "config:base",
    ":pinAllExceptPeerDependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "ignoreDeps": [
    "husky"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ]
    },
    {
      "depTypeList": [
        "dependencies"
      ],
      "groupName": "dependencies"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "groupName": "devDependencies"
    }
  ],
  "reviewers": [
    "team:jser"
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
